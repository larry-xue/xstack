{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts --format esm --dts --outDir dist --clean",
    "dev": "tsx watch src/server.ts",
    "start": "pnpm run build && node dist/server.js",
    "test": "pnpm run build && node ../../node_modules/typescript/bin/tsc -p test/tsconfig.json --noEmit && vitest run --config vitest.config.ts",
    "prisma": "prisma",
    "lint": "pnpm -w lint",
    "typecheck": "node ../../node_modules/typescript/bin/tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@elysiajs/node": "latest",
    "@elysiajs/openapi": "^1.4.14",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.4",
    "elysia": "latest",
    "jose": "^6.1.3",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "prisma": "^7.3.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.2",
    "vitest": "latest"
  }
}
