{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json",
    "prisma": "prisma",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "pnpm -w lint",
    "typecheck": "node ../../node_modules/typescript/bin/tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.14",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "elysia": "latest",
    "jose": "^6.1.3",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "prisma": "^7.3.0"
  }
}
