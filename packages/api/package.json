{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json",
    "dev:start": "node --watch dist/server.js",
    "dev": "pnpm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "start": "pnpm run build && node dist/server.js",
    "test": "pnpm run build && node ../../node_modules/typescript/bin/tsc -p test/tsconfig.json --noEmit && vitest run",
    "prisma": "prisma",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "pnpm -w lint",
    "typecheck": "node ../../node_modules/typescript/bin/tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@elysiajs/node": "latest",
    "@elysiajs/openapi": "^1.4.14",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.4",
    "elysia": "latest",
    "jose": "^6.1.3",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "concurrently": "^9.0.0",
    "prisma": "^7.3.0",
    "vitest": "latest"
  }
}
